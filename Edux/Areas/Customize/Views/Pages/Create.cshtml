                                <input asp-for="AllowedRoles" class="form-control" />
                                <span asp-validation-for="AllowedRoles" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="CreateDate" class="form-control" />
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatedBy" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="CreatedBy" class="form-control" />
                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="UpdateDate" class="form-control" />
                                <span asp-validation-for="UpdateDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedBy" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="UpdatedBy" class="form-control" />
                                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="AppTenantId" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="AppTenantId" class="form-control" />
                                <span asp-validation-for="AppTenantId" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                </div>
                </div>
            </div>
        </div>
    
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn dark btn-outline">Kapat</button>
                    <input type="submit" value="Oluþtur" class="btn green" />

                </div>

</form>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
